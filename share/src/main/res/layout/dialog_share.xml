<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="@string/share_to"
        android:textColor="@color/color_858585"
        android:textSize="16sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/wechat_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_share_wechat"
                android:gravity="center"
                android:text="@string/wechat"
                android:textColor="@color/color_858585"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wechat_circle_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_share_circle"
                android:gravity="center"
                android:text="@string/wechat_circle"
                android:textColor="@color/color_858585"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qq_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_share_qq"
                android:gravity="center"
                android:text="@string/qq"
                android:textColor="@color/color_858585"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/qzone_layout"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="8dp"
                android:drawableTop="@drawable/ic_share_qzone"
                android:gravity="center"
                android:text="@string/qzone"
                android:textColor="@color/color_858585"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e9e9e9" />

    <TextView
        android:id="@+id/cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/selector_cancel"
        android:gravity="center"
        android:padding="0px"
        android:text="@string/cancel"
        android:textSize="16sp" />

</LinearLayout>