<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/progress_layout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/shape_background"
        android:padding="4dp"
        android:visibility="gone">

        <View
            android:id="@+id/current_progress"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_current_progress" />

        <com.singingkungfu.sing.widget.UnitView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/action_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/reset_btn"
            style="?borderlessButtonStyle"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_reset"
            android:padding="0px"
            android:text="@string/reset_test"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/next_btn"
            style="?borderlessButtonStyle"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_btn"
            android:padding="0px"
            android:text="@string/next"
            android:textColor="@color/color_4fc8ec"
            android:textSize="14sp" />
    </LinearLayout>

</RelativeLayout>